<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Enter Details">
                <items jcr:primaryType="cq:WidgetCollection">
                    <TextB
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Enter Title"
                        name="./title"
                        xtype="textfield"/>
                    <Subtitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Enter Subtitle"
                        name="./subtitle"
                        xtype="textfield"/>
                    <Text
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Enter Text"
                        name="./text"
                        title="Text"
                        xtype="richtext"/>
                    <download
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Select your choice"
                        fieldLabel="Align Image"
                        name="./align"
                        xtype="radiogroup">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <Left
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Align Left"
                                inputValue="left"
                                name="./align"
                                xtype="radio"/>
                            <Right
                                jcr:primaryType="cq:Widget"
                                checked="{Boolean}true"
                                fieldLabel="Align Right"
                                inputValue="right"
                                name="./align"
                                xtype="radio"/>
                        </items>
                    </download>
                </items>
            </tab1>
            <Image
                jcr:primaryType="cq:Widget"
                cropParameter="./image/file"
                ddGroups="[media]"
                fileReference="./image/fileref"
                mapParameter="./image/file"
                name="./image/file"
                title="Image"
                xtype="html5smartimage"/>
        </items>
    </items>
</jcr:root>
